{
  "version": 2,
  "name": "pethealth",
  "builds": [
    {
      "src": "packages/client-fe/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "packages/client-be/dist/src/index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "^/graphql",
      "dest": "packages/client-be/dist/src/index.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "packages/client-fe/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "packages/client-fe/favicon.ico"
    },
    {
      "src": "^/asset-manifest.json",
      "dest": "packages/client-fe/asset-manifest.json"
    },
    {
      "src": "^/manifest.json",
      "dest": "packages/client-fe/manifest.json"
    },
    {
      "src": "^/service-worker.js",
      "headers": {
        "cache-control": "s-maxage=0"
      },
      "dest": "packages/client-fe/service-worker.js"
    },
    {
      "src": "^/precache-manifest.(.*)",
      "dest": "packages/client-fe/precache-manifest.$1"
    },
    {
      "src": "^/(.*)",
      "dest": "packages/client-fe/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
