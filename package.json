{
  "name": "healthvet",
  "private": true,
  "devDependencies": {
    "@types/prettier": "1.16.1",
    "@types/react": "16.8.4",
    "@types/react-dom": "16.8.2",
    "@types/rimraf": "^2.0.2",
    "@types/styled-components": "4.1.10",
    "husky": "1.3.1",
    "lerna": "3.10.8",
    "lint-staged": "8.1.3",
    "now": "^13.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-loader": "3.6.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "3.6.0",
    "typescript": "3.3.1"
  },
  "scripts": {
    "bootstrap": "yarn && yarn run dist",
    "clean": "npm run clean:build && npm run clean:node",
    "clean:build": "lerna exec -- rimraf dist",
    "clean:node": "lerna exec -- rimraf node_modules",
    "clean:lerna": "rimraf node_modules",
    "dist": "lerna run dist",
    "start": "yarn run dist && lerna run start --parallel",
    "lint": "npm run lint:ts && echo 'tslint check: OK'",
    "lint:ts": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write --config .prettierrc \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}\"",
    "deploy": "lerna run deploy --parallel",
    "gen:graphql": "lerna run gen:graphql"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}": [
      "npm run prettier",
      "git add"
    ]
  }
}
