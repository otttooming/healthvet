type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  published: Boolean! @default(value: "false")
  title: String!
  content: String
  author: User!
  histories: [History!]!
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String
  posts: [Post!]!
}

type History {
  id: ID! @unique
  author: User!
  createdAt: DateTime!
  updatedAt: DateTime!
  title: String
  content: String
}
